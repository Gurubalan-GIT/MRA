<!DOCTYPE html>
<html>
  <head>
    <title>MRA</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag 'https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css' %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>


    <nav class="navbar navbar-expand-md navbar-dark bg-dark">
      <a class="navbar-brand" href="/">MRA</a>
      <div class="collapse navbar-collapse" id="navbarsExampleDefault">
        <ul class="navbar-nav mr-auto"> 


          <% if current_user && current_user.admin? %>
              <li class="nav-item">
                <a class="nav-link disabled" href="#" tabindex="-1" aria-disabled="true">Admin</a>
              </li>
          <% end %>

          <% if current_user %>
          <li class="nav-item">
            <a class="nav-link">Signed in as <%= current_user.email %> </a>
          </li>
          <% else %>
            <li class="nav-item">
              <a class="nav-link disabled" href="#" tabindex="-1" aria-disabled="true">Guest</a>
            </li>
          <% end %>

         
        
        </ul>

        <ul class="navbar-nav ml-auto"> 

            <% if current_user && current_user.admin? %>

             <li class="nav-item">
                <%= link_to 'Users', all_users_path , class: 'nav-link' %> 
             </li>

            <li class="nav-item dropdown">
              <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                Meetings
              </a>
              <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                <%= link_to 'All Meetings', all_meetings_path, class: 'dropdown-item' %> 
                <%= link_to 'Your Meetings', meetings_path , class: 'dropdown-item' %> 
              </div>
            </li>

               <li class="nav-item">
                <%= link_to 'Rooms', rooms_path , class: 'nav-link' %> 
              </li>

           <% end %>

          <% if current_user %>

          <li class="nav-item">
          <%= link_to 'Calendar View', calendar_path, class: 'nav-link' %> 
          </li>   

          <li class="nav-item dropdown mr-4">
            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              Settings
            </a>
            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
              <%= link_to 'Edit Account', edit_user_registration_path , class: 'dropdown-item' %> 
              <%= link_to 'Sign out', destroy_user_session_path, method: :delete , class: 'dropdown-item' %> 
            </div>
          </li>

          <% end %>
        
        </ul>

      </div>
    </nav>

    
    <% if notice %>
      <p class="alert alert-success"><%= notice %></p>
    <% end %>
    <% if alert %>
      <p class="alert alert-danger"><%= alert %></p>
    <% end %>

    <div class='container'>
      <%= yield %>
    </div>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" crossorigin="anonymous"></script>
  </body>
</html>
